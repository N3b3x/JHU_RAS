<?xml version="1.0"?>
<robot name="basic_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!--
      Dimensions:
        - Chassis (box)  : 0.825 x 0.825 x 0.075 (m)
        - Wheels (cyl)   : radius=0.4, length=0.05 (m)
                          left_wheel = blue, right_wheel = red
        - Lidar dome     : sphere radius=0.03125 (m) => 3.125 cm
                           half protruding above chassis
                           center offset 0.3 m in front (x=0.3)
  -->
  <!-- Chassis link -->
  <link name="chassis">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <box size="0.825 0.825 0.075" />
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <box size="0.825 0.825 0.075" />
      </geometry>
    </collision>
  </link>

  <!-- Left Wheel link -->
  <link name="left_wheel">
    <visual>
      <!-- Centered on x=0, out to the left in y=+0.4125, offset by length/2 in z -->
      <origin xyz="0 0.4375 0" rpy="0 1.5708 1.5708" />
      <geometry>
        <cylinder radius="0.4" length="0.05"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0.4375 0.025" rpy="0 1.5708 1.5708" />
      <geometry>
        <cylinder radius="0.4" length="0.05"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.5"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0"
               iyy="0.1" iyz="0.0"
               izz="0.1"/>
    </inertial>
  </link>

  <!-- Right Wheel link -->
  <link name="right_wheel">
    <visual>
      <origin xyz="0 -0.4375 0" rpy="0 1.5708 1.5708" />
      <geometry>
        <cylinder radius="0.4" length="0.05"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 -0.4375 0" rpy="0 1.5708 1.5708" />
      <geometry>
        <cylinder radius="0.4" length="0.05"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.5"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0"
               iyy="0.1" iyz="0.0"
               izz="0.1"/>
    </inertial>
  </link>

  <!-- Lidar Dome link -->
  <link name="lidar_dome">
    <visual>
      <!--
        The top half of the sphere (radius=0.03125) sticks out above chassis.
        Chassis height = 0.075, so we place the center a bit below top
        (or so that half is above).
        Also offset in front by 0.3 m (x=0.3).
      -->
      <origin xyz="0.3 0 0.0375" />
      <geometry>
        <sphere radius="0.03125"/>
      </geometry>
      <material name="green">
        <color rgba="0 1 0 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0.3 0 0.0375" />
      <geometry>
        <sphere radius="0.03125"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.1"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0"
               iyy="0.01" iyz="0.0"
               izz="0.01"/>
    </inertial>
  </link>

  <!-- JOINTS -->
  <!-- Joint connecting chassis to left wheel -->
  <joint name="chassis_to_left_wheel" type="continuous">
    <parent link="chassis"/>
    <child link="left_wheel"/>
    <origin xyz="0 0 0"/>
    <!-- Wheel spins around y-axis for differential drive -->
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Joint connecting chassis to right wheel -->
  <joint name="chassis_to_right_wheel" type="continuous">
    <parent link="chassis"/>
    <child link="right_wheel"/>
    <origin xyz="0 0 0"/>
    <!-- Wheel spins around y-axis for differential drive -->
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Joint connecting chassis to lidar dome -->
  <joint name="chassis_to_lidar_dome" type="fixed">
    <parent link="chassis"/>
    <child link="lidar_dome"/>
    <origin xyz="0 0 0"/>
  </joint>

</robot>
